---
import { SITE_DESCRIPTION, TITLE } from "../config";
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout
  title={`404 Not Found | ${TITLE}`}
  description={SITE_DESCRIPTION}
>
  <div class="flex items-center justify-center flex-col py-16">
    <h1 class="py-8 text-3xl font-black">404 Not Found</h1>
    <p>
      The page you are looking for does not exist. Please check the URL and try
      again.
    </p>
    <div class="py-8 underline"><a href="/">Back</a></div>
  </div>
</MainLayout>
